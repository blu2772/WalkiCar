{
  "name": "walkicar-backend",
  "version": "1.0.0",
  "description": "WalkiCar App Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "stop": "pkill -f 'node server.js' || true",
    "restart": "npm run stop && sleep 2 && npm start",
    "status": "pgrep -f 'node server.js' > /dev/null && echo 'Server is running' || echo 'Server is not running'",
    "logs": "tail -f /var/log/walkicar.log 2>/dev/null || echo 'No log file found'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop walkicar-backend",
    "pm2:restart": "pm2 restart walkicar-backend",
    "pm2:status": "pm2 status walkicar-backend",
    "pm2:logs": "pm2 logs walkicar-backend",
    "pm2:delete": "pm2 delete walkicar-backend"
  },
  "keywords": ["walkicar", "car", "social", "voice-chat", "location"],
  "author": "WalkiCar Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "socket.io": "^4.7.4",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
