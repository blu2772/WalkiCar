{
  "name": "walkicar-backend",
  "version": "1.0.0",
  "description": "WalkiCar App Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "stop": "pkill -f 'node server.js' || pkill -f 'walkicar-backend' || true",
    "restart": "npm run stop && sleep 3 && npm start",
    "status": "pgrep -f 'node server.js' > /dev/null && echo 'WalkiCar Server (mit Socket.IO) lÃ¤uft' || echo 'WalkiCar Server ist nicht aktiv'",
    "logs": "tail -f /var/log/walkicar.log 2>/dev/null || echo 'Keine Log-Datei gefunden'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop walkicar-backend",
    "pm2:restart": "pm2 restart walkicar-backend",
    "pm2:status": "pm2 status walkicar-backend",
    "pm2:logs": "pm2 logs walkicar-backend",
    "pm2:delete": "pm2 delete walkicar-backend",
    "start:full": "npm run start:coturn && npm start",
    "stop:full": "npm run stop:coturn && npm run stop", 
    "start:full:server": "node server-coturn-manager.js start && npm start",
    "stop:full:server": "npm run stop && node server-coturn-manager.js stop",
    "start:coturn": "sudo systemctl start coturn",
    "stop:coturn": "sudo systemctl stop coturn",
    "restart:coturn": "sudo systemctl restart coturn",
    "status:coturn": "sudo systemctl status coturn",
    "manage:coturn": "node coturn-manager.js",
    "server:coturn": "node server-coturn-manager.js",
    "coturn:status": "node server-coturn-manager.js status",
    "coturn:info": "node server-coturn-manager.js info",
    "coturn:sudoers": "node server-coturn-manager.js sudoers",
    "debug:coturn": "node coturn-debug.js full",
    "debug:coturn:service": "node coturn-debug.js service",
    "debug:coturn:ports": "node coturn-debug.js ports",
    "debug:coturn:config": "node coturn-debug.js config",
    "debug:ios": "node coturn-debug.js ios-config"
  },
  "keywords": [
    "walkicar",
    "car",
    "social",
    "voice-chat",
    "location"
  ],
  "author": "WalkiCar Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
